{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/polaroid-generator",
	"version": "1.0.0",
	"title": "Polaroid Generator",
	"category": "widgets",
	"icon": "smiley",
	"description": "A WordPress block that creates beautiful polaroid-style photo galleries with dynamic loading animations and customizable captions.",
	"example": {},
	"attributes": {
		"photos": {
			"type": "number",
			"default": 6
		}
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"color": {
			"background": true,
			"text": false
		}
	},
	"textdomain": "polaroid-generator",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
